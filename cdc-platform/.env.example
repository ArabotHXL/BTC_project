# Database
DATABASE_URL=postgresql://hashinsight:hashinsight_secret_2024@localhost:5432/hashinsight

# Redis
REDIS_URL=redis://localhost:6379/0

# Kafka
KAFKA_BROKERS=localhost:9093
KAFKA_CONNECT_URL=http://localhost:8083

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-bytes

# Application
FLASK_ENV=development
APP_VERSION=1.0.0-cdc
TZ=UTC

# Multi-tenancy
DEFAULT_TENANT_ID=default

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache TTL (seconds)
CACHE_TTL_PORTFOLIO=600
CACHE_TTL_FORECAST=1800
CACHE_TTL_ANALYTICS=300

# Worker Configuration
WORKER_BATCH_SIZE=100
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=5

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
