# HashInsight Miner Agent 配置文件
# 复制此文件为 agent_config.ini 并填写实际配置

[agent]
# Agent 唯一标识（由管理员在云端创建时生成）
agent_id = a1b2c3d4-e5f6-7890-abcd-ef1234567890

# 访问令牌（由管理员在云端创建时生成，仅显示一次，请妥善保管）
access_token = YOUR_ACCESS_TOKEN_HERE

[cloud]
# 云端 API 地址
api_base_url = https://hashinsight.replit.app/agent/api

[miners]
# 矿机 IP 地址列表（逗号分隔）
# 示例：192.168.1.100,192.168.1.101,192.168.1.102
ip_list = 192.168.1.100,192.168.1.101

[settings]
# 数据采集间隔（秒）
collection_interval = 60

# 心跳间隔（秒）
heartbeat_interval = 30

# CGMiner API 超时（秒）
cgminer_timeout = 5

# 最大数据缓冲数量
max_buffer_size = 10000

# 最大数据缓冲时长（小时）
max_buffer_hours = 24
